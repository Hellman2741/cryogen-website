if comments.isEmpty()
  h6.t-center No comments have been made yet.
else
  for comment in comments
    div(style="margin: 2px auto; max-width: 250px; border: 1px solid #000; padding: 5px; border-radius: 5px; background: #151515;")
      div(style='font-size: 12px; text-align: left;')= '$for-name='+comment.getUsername()+'$end Said:'
      div(style='font-size: 12px; text-align: left;')= formatter.formatTimestamp(comment.getTime(), 'MMMMM dd, YYYY H:mm a')
      div.t-center(style='padding: 10px;')= comment.getComment()
