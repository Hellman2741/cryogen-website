extend ../default

block head
  script.
    $(document).ready(function() {
      var section = "#{section}";
      if(section != null && section != "")
        $('.nav-tabs a[href="#'+section+'"]').tab('show');
    });

block content
  div.container.account-area(style='min-height: 600px; padding: 20px 0;')
    div.row
      div.col-md-3
        ul.nav.nav-tabs
          li.nav.active.account-item
            a(href='#overview', data-toggle='tab') Support Overview
          li.nav.account-item
            a(href='#report_player', data-toggle='tab') Report a Player
          li.nav.account-item
            a(href='#report_bug', data-toggle='tab') Report a Bug
          li.nav.account-item
            a(href='#appeal', data-toggle='tab') Appeal an Offence
      div.col-md-9
        div.widget.register
          div.tab-content.content
            include sections/overview
            include sections/report_player
            include sections/report_bug
            include sections/appeal/appeal
