table.table.hs-table.table-condensed.table-responsive.users-table.widget(style='font-size: 12px;')
    thead
        tr
            th.t-center ID
            th.t-center To
            th.t-center Subject
            th.t-center Date
            th.t-center Read
            th.t-center Delete
    tbody
        for message in messages
            tr(data-id=message.getId())
                td.b-right= message.getId()
                td.b-right= '$for-name='+message.getRecipient().getUsername()+'$end'
                td.b-right= message.getSubject()
                td.b-right= formatter.formatTimestamp(message.getAdded(), 'EEEE, MMM dd, YYYY')
                td.b-right.vis-link.message-read
                    i.fa.fa-envelope
                td.vis-link.sent-message-delete
                    i.fa.fa-trash
