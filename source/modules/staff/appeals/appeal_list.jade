table.table.hs-table.table-condensed.table-responsive.preports-table.widget(style='font-size: 12px;')
	thead
		tr
			th.t-center Type
			th.t-center Title
			th.t-center Username
			th.t-center Appeal Date
			th.t-center Last Action
			th.t-center Status
			th.t-center Punishment
			th.t-center View
			if !archive
				th.t-center Pin
	tbody
		for appeal in appeals
			-var arch = archive ? 'true' : 'false';
			tr(data-id=appeal.getId(), data-type=appeal.type(), data-arc=arch)
				td.b-right
					span
						if appeal.getType() == 1
							svg.icon.icon-hammer2
								use(xlink:href='#icon-hammer2')
						else
							span.fa.fa-microphone-slash
					span= ' '+(appeal.getType() == 0 ? 'Mute' : 'Ban')
				td.b-right= appeal.getTitle()
				td.b-right= '$for-name='+appeal.getUsername()+'$end'
				td.b-right= formatter.formatTimestamp(appeal.getTime(), 'MMM dd, YYYY H:mm a')
				td.b-right= appeal.getLastAction()
				td.b-right
					span(class=''+appeal.getColour())= appeal.getStatus()
				td.b-right.vis-link#punisha-link View Punishment
				td.b-right.vis-link#viewa View
				if !archive
					td.link
						-var read = appeal.userHasRead(user.getUsername())
						-var titl = read ? 'Pin this report to view it on the overview page at all times' : 'This report currently appears on the overview page. Unpin to hide it.';
						div#pin(title=titl)
							i.ionicons.ion-pin(style='font-size: 10px; transform: rotate(35deg);')
							if read
								span  Pin
							else
								span  Unpin
