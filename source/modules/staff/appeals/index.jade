script.
	$(document).ready(function() {

		var archive = false;
		var close = 'Click to close search bar.';
		var open = 'Click to open search bar.';

		//click search icon
		$('#search-appeal-icon').click(function() {
			var icon = $(this);
			var search = $('#searcha-pin');
			var user = search.find('input').val();
			var att = search.attr('display');
			if(att == 'none') {
				icon.attr('title', close);
				search.attr('display', 'inline');
				search.show('slide', {direction: 'right'}, 1000);
			} else {
				if(user == '') {
					search.hide('slide', {direction: 'right'}, 1000, function() {
						search.attr('display', 'none');
						icon.attr('title', open);
					});
					return;
				}
				$('#search-aerror').css('display', '');
				$('#search-aerror').html('error');
				$('#search-aerror').fadeOut(5000);
			}
		});

		$('#archivea-btn').click(function() {
			var archived = !archive;
			archive = archived;
			$.post('/staff', { mod:'appeal', action:'view-list', archived:archived }, function(ret) {
				var data = JSON.parse(ret);
				if(data.success === null) {
					sendAlert('Session expired! Refresh the page to login again.');
					return;
				}
				if(!data.success) {
					sendAlert(data.error);
					return;
				}
				$('#appeal-main').html(data.html);
				var desc = archived ? 'Currently viewing all archived appeals' : 'Currently viewing all active appeals';
				$('#archive-ap').html(' '+(archived ? 'Active' : 'Archive'));
				$('#appealp-info').html(desc);
			});
		});

	});
