script.
	var archive = false;
	var appeal_page = 1;
	$(document).ready(function() {

		loadAppealList();

		function loadAppealList() {
			loadList('appeal', archive, appeal_page);
			return false;
		}

		$(document).on('click', '.returna-but, .returnp-but', loadAppealList);

		$(document).on('click', '#punisha-link', function() {
			var tr = $(this).closest('tr');
			var id = tr.data('id');
			loadPunishment(id, 'true', 'appeal');
			return false;
		});

		$(document).on('click', '#viewa', function() {
			loadAppeal($(this).closest('tr').data('id'), 'appeal');
			return false;
		});

		$('#archivea-btn').click(function() {
			archive = !archive;
			appeal_page = 1;
			return loadAppealList();
		});

		$(document).on('click', '#appeal-pages .page-link', function() {
			appeal_page = $(this).data('page');
			return loadAppealList();
		});

			//click search icon
		$('#search-appeal-icon').click(function() {
			clickSearchIcon('appeal', archive, appeal_page);
		});

		$('#search-appeal-pin').find('input').keydown(function(e) {
			if(e.which == 13) {
				$('#search-appeal-icon').click();
				$(this).blur();
				return false;
			}
		});

	});
