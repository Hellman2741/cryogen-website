script.
	var archive = false;
	var breport_page = 1;
	$(document).ready(function() {

		loadBugReportList();

		function loadBugReportList() {
			loadList('breport', archive, breport_page);
			return false;
		}

		function loadBugReport(id) {
			loadReport('breport', archive, id);
		}

		$(document).on('click', '#breport-pages .page-link', function() {
			breport_page = $(this).data('page');
			return loadBugReportList();
		});

		$(document).on('click', '#view', function() {
			var elem = $(this).closest('tr');
			var id = elem.data('id');
			var type = elem.data('type');
			if(type != 'BUG')
				return false;
			loadBugReport(id);
			return false;
		});    

		$(document).on('click', '.returnb-but', loadBugReportList);

		$('#viewarch-btn').click(function() {
			archive = !archive;
			breport_page = 1;
			return loadBugReportList();
		});

		$('#search-breport-icon').attr('title', OPEN);

			//click search icon
		$('#search-breport-icon').click(function() {
			clickSearchIcon('breport', archive, appeal_page);
		});

		$('#search-breport-pin').find('input').keydown(function(e) {
			if(e.which == 13) {
				$('#search-breport-icon').click();
				$(this).blur();
				return false;
			}
		});

		$(document).on('click', '.search-filters-breport .remove-filter', function() {
			var filter = $(this).closest('.search-filter');
			if(typeof filter === 'undefined')
				return false;
			var name = filter.data('name');
			if(name === '')
				return false;
			removeFilter('breport', name, archive);
			return false;
		});

	});
