include ../utils/name
include ../utils/stylesheet

+includeStylesheet('misc')

script.
    $(document).ready(() => {

        $('#recover-container .row').each(function(i, value) {
            let mds = $(this).find('.col-md-6');
            let left = $(mds[0]);
            let right = $(mds[1]);
            let rHeight = parseInt(right.css('height').replace('px', ''));
            let lHeight = parseInt(left.css('height').replace('px', ''));
            left.css('margin-top', (rHeight-lHeight)/2+'px');
        });

    });

.noty_message
    span.noty_text
    span  for 
        +renderName(user)
.container#recover-container(style='width: 100%; padding-bottom: 15px;')
    //- ID
    .row
        .col-md-6
            p.view-info ID:
        .col-md-6
            p.view-info= recovery.getId()
    //- IP
    .row
        .col-md-6
            p.view-info Created with IP:
        .col-md-6
            p.view-info= recovery.getIP()
    //- View Key
    .row
        .col-md-6
            p.view-info View Key:
        .col-md-6
            p.view-info= recovery.getViewKey()
    //- Email entered
    .row
        .col-md-6
            p.view-info Email entered:
        .col-md-6
            p.view-info= recovery.getEmailEntered() == null || recovery.getEmailEntered() == '' ? 'Nothing entered ' : recovery.getEmailEntered()+' '
                span
                    i(class="fa color-"+((recovery.getEmailStatus() == 3 || recovery.getEmailStatus() == -2) ? 'green fa-check-circle-o' : 'red fa-times-circle-o'), title=recovery.getEDTitle(true))
    //- Discord entered
    .row
        .col-md-6
            p.view-info Discord entered:
        .col-md-6
            p.view-info= recovery.getDiscordEntered() == null || recovery.getDiscordEntered() == '' ? 'Nothing entered ' : recovery.getDiscordEntered()+' '
                span
                    i(class="fa color-"+((recovery.getDiscordStatus() == 3 || recovery.getDiscordStatus() == -2) ? 'green fa-check-circle-o' : 'red fa-times-circle-o'), title=recovery.getEDTitle(false))
    //- Creation Date Set/Date Difference if is set
    .row
        .col-md-6
            p.view-info Creation Date:
        .col-md-6
            if recovery.getCreationDate() == null
                p.view-info Nothing Entered 
                    span
                        i.fa.fa-times-circle-o.color-red
            else
                -var days = format.getDateDiff(recovery.getAccount().getAdded(), recovery.getCreationDate())
                p.view-info= 'Difference: '+format.stampToTerm(recovery.getAccount().getAdded(), recovery.getCreationDate())+' '
                    span
                        if days < 14
                            i.fa.fa-check-circle-o.color-green
                        else if days < 60
                            i.fa.fa-check-circle-o.color-yellow
                        else
                            i.fa.fa-times-circle-o.color-red
                
                    
    //- City/Country
    .row
        .col-md-6
            p.view-info City/Country:
        .col-md-6
            if recovery.getCityCountry() == null || recovery.getCityCountry() == ''
                p.view-info Nothing Entered 
                    span
                        i.fa.fa-times-circle-o.color-red
            else
                p.view-info= 'Entered: '+recovery.getCityCountry()
                p.view-info= 'Actual: '+recovery.getRealCityCountry()
    //- ISP
    .row
        .col-md-6
            p.view-info ISP:
        .col-md-6
            if recovery.getISP() == null || recovery.getISP() == ''
                p.view-info Nothing Entered 
                    span
                        i.fa.fa-times-circle-o.color-red
            else
                p.view-info= 'Entered: '+recovery.getISP()
                p.view-info= 'Actual: '+recovery.getRealISP()
    //- Previous Passwords
    .row
        .col-md-6
            p.view-info Previous Passwords:
        .col-md-6
            p.view-info= 'Password 1: '+recovery.getPreviousPasswordStatus(0)+' '
                span
                    i(class=recovery.getPasswordIconClass(0))
            p.view-info= 'Password 2: '+recovery.getPreviousPasswordStatus(1)+' '
                span
                    i(class=recovery.getPasswordIconClass(1))
            p.view-info= 'Password 3: '+recovery.getPreviousPasswordStatus(2)+' '
                span
                    i(class=recovery.getPasswordIconClass(2))
    //- Recovery Questions Entered
    .row
        .col-md-6
            p.view-info Correct Recovery Questions Entered:
        .col-md-6
            p.view-info(class=recovery.getCorrectRecoveryQuestions() > 2 ? 'color-green' : recovery.getCorrectRecoveryQuestions() > 1 ? 'color-yellow' : 'color-red')= recovery.getCorrectRecoveryQuestions()
    //- Additional
    .row
        .col-md-6
            p.view-info Additional:
        .col-md-6
            .view-info#additional
                span= recovery.getAdditional() == null ? '' : recovery.getAdditional()
    if recovery.isArchived()
        //- Status
        .row
            .col-md-6
                p.view-info Status:
            .col-md-6
                p(class='recover-info '+recovery.getStatusClass())= recovery.getStatusStr()
        //- Decider
        .row
            .col-md-6
                p.view-info Decider:
            .col-md-6
                p.view-info
                    span
                        +renderName(recovery.getDecider())
        //- Reason
        .row
            .col-md-6
                p.view-info Reason:
            .col-md-6
                p.view-info#additional= recovery.getReason()
.noty_close