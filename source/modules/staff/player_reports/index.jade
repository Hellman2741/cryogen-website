script.
  var toggled = false;
  $(document).ready(function() {
  
    $('#caction').click(function() {
      var cnt = $(this).find('.dropdwn-cnt');
      if(toggled) {
        cnt.removeClass('dropdwn-show');
      } else {
        cnt.addClass('dropdwn-show');
      }
      toggled = !toggled;
    });
  
  });
div.tab-pane.fade(id='preports')
  div.row 
    div.iactions
      div
        div(style='float: left; margin: 10px 10px;')
          h5.color-grey Player Reports
            h6.color-grey Currently viewing all active player reports
        div(style='float: right; margin: 33.5px 5px;')
          div.link
            i.fa.fa-archive
            span  Archive
      div(style='padding: 10px;')
        table.table.hs-table.table-condensed.table-responsive.preports-table.widget
          thead
            tr
              th.t-center Title
              th.t-center Username
              th.t-center Reporting
              th.t-center Date
              th.t-center Action
              th.t-center View
              th.t-center Pin
          tbody
            for report in preports
              tr(data-id=report.getId())
                td.b-right= report.getTitle()
                td.b-right= '$for-name='+report.getUsername()+'$end'
                td.b-right= '$for-name='+report.getOffender()+'$end'
                td.b-right= formatter.formatTimestamp(report.getTime(), 'MMM dd, YYYY H:mm a')
                td.b-right.dropdown(style='max-width: 160px!important;')
                  span.dropdown-toggle(data-toggle='dropdown') Click for Actions
                    b.caret
                  ul.dropdown-menu#acmenu
                    li
                      div.t-center.link#archive(style='font-size: 12px;')
                        i.fa.fa-archive
                        span  Archive Report
                td.b-right.link View
                td.link
                  -var read = report.userHasRead(user.getUsername())
                  -var titl = read ? 'Pin this report to view it on the overview page at all times' : 'This report currently appears on the overview page. Unpin to hide it.';
                  div(title=titl)
                    i.ionicons.ion-pin(style='font-size: 10px; transform: rotate(35deg);')
                    if read
                      span  Pin
                    else
                      span  Unpin
