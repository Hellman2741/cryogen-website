script.
  var archive = false;
  var recover_page = 1;
  $(document).ready(function() {

    loadRecoveryList();

    $(document).on('click', '#recover-pages .page-link', function() {
      recover_page = $(this).data('page');
      return loadRecoveryList();
    });

    $('#search-recover-icon').click(function() {
      clickSearchIcon('recover', archive, recover_page);
      return false;
    });

    $('#search-recover-pin').find('input').keydown(function(e) {
      if(e.which == 13) {
        $('#search-recover-icon').click();
        $(this).blur();
        return false;
      }
    });

    $(document).on('click', '.search-filters-recover .remove-filter', function() {
      var filter = $(this).closest('.search-filter');
      if(typeof filter === 'undefined')
        return false;
      var name = filter.data('name');
      if(name === '')
        return false;
      removeFilter('recover', name, archive);
      return false;
    });

    $('#archiver-btn').click(function() {
      archive = !archive;
      appeal_page = 1;
      return loadRecoveryList();
    });

    $(document).on('click', '.viewr', function() {
      id = $(this).closest('tr').data('id');
      loadRecovery(id);
    });

    $(document).on('click', '#recover-goback a', function() {
      recover_page = 1;
      return loadRecoveryList();
    });

  });
div.tab-pane.fade#recoveries
  div.row 
