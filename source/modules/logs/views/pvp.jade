include ../../utils/name

.noty_message
    span.noty_text
.container#noty-container
    .row
        .col-md-6
            p ID:
        .col-md-6
            p= pvp.getId()
    .row
        .col-md-6
            p User:
        .col-md-6
            p
                span
                    +renderName(pvp.getUser())
                span= ' ('+pvp.getIp()+')'
    .row
        .col-md-6
            p Killer:
        .col-md-6
            p
                span
                    +renderName(pvp.getKiller())
                span= ' ('+pvp.getKillerIp()+')'
    .row
        .col-md-6
            p Date:
        .col-md-6
            p= format.formatTimestamp(pvp.getAdded())
    .row
        .col-md-6
            p World Tile:
        .col-md-6
            p= pvp.getWorldTile()
    .row
        .col-md-6
            p#death-tile-label Picture:
        .col-md-6
            p
                img#death-tile(src=pvp.getExtra())
    .row
        .col-md-6
            p#items-lost-label Items Lost:
        .col-md-6
            .lost-items
                for item in pvp.getItemsLost()
                    p
                        span.lost-item-uid.link(data-uid=item.get('uid'), title=item.get('uid'))= format.toItemName(item.get('id'))+' ('+format.toInt(item.get('id'))+')'
                        span  x 
                        span(title=format.formatNumber(item.get('amount')), class=format.formatRunescapeNumberClass(item.get('amount')))= format.formatRunescapeNumber(item.get('amount'))
.noty_close