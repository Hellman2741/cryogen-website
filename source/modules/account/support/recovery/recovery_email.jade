include ../../../utils/name
include ../../../utils/stylesheet

html
    head
        style.
            .container {
                min-height: 500px;
                width: 100%;
                background: url('http://cryogen-rsps.com/images/bg-lighting.png') no-repeat scroll center -1000px #18597f;
                color: #888;
            }
            .widget {
                background: #1C1C1C;
                border: 1px solid #111;
                border-radius: 5px;
                margin: 100px auto;
                max-width: 487px;
                -webkit-box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 1);
                -moz-box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 1);
                box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 1);
            }
            .header {
                border-bottom: 1px solid #124d70;
                padding: 8px 10px;
            }
            h4 {
                margin: 2px 0;
                font-size: 13px;
            }
            h5 {
                font-size: 11px;
                padding-left: 10px;
                font-family: none;
                margin: 0;
                margin-top: 8px;
            }
            .color-yellow {
                color: yellow;
            }
            .color-white {
                color: white;
            }
            .color-grey {
                color: grey;
            }
            p {
                text-align: center;
                font-size: 16px;
                display: block;
            }
            #link-info {
                margin-bottom: 2px;
            }
            #link {
                text-align: center;
                font-size: 16px;
                display: block;
            }
            .clear {
                clear: both;
            }
            .spacer {
                height: 1px;
            }
    body
        .container
            .spacer
            .widget
                .header
                    h4.color-white Password Recovery
                        h5.color-grey Hello, 
                            span
                                +renderName(user)
                        h5.color-grey A password recovery request has been made for your account.
                        h5.color-grey If you did not make this request, please follow #[a(href='http://cryogen-rsps.com/forums/', target='_blank') this] link for information on how to secure your account.
                        h5.color-grey If you did make this request, simply follow the link below to continue with resetting your password.
                .content
                    .recovery-content
                        p.color-yellow= 'Reset Password Key: '+key
                        p.color-grey#link-info Reset Password Link:
                        a.color-white#link(href=link)= link
            .clear