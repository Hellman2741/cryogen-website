div.noty_message
	span.noty_text
	div.widget.register(style='margin-top: 5px')
		div.report_line
			label(for="title") Title
			input#title(type='text', placeholder='Title')
		div(style='clear: both;')
		div.report_line
			label.name Offender
			input#offender(type='text', placeholder='Offender')
		div(style='clear: both;')
		div.report_line
			label.name Rule Broken
			input#rule(type='text', placeholder='Rule Broken')
		div(style='clear: both;')
		div.report_line
			label.name Proof
			textarea#proof(placeholder='Proof (Please include screenshots)', maxlength='200')
		div(style='clear: both;')
		div.report_line
			label.name Extra Info
			textarea#info(placeholder='Any additional information (optional)', maxlength='300')
		div(style='clear: both;')
	div.noty_close
