script.
	$(document).ready(function() {
		function miniLogin() {
			var user = $(".user").val();
			var pass = $(".pass").val();
			if(user == '' || pass == '') {
				$(".mini-alert").css("display","block");
				$(".mini-alert").html("Both fields need to be filled out");
				return;
			}
			var log = 'true';
			var redirect = "!{redirect}";
			$.post('/login?mini-login=true', {username:user,password:pass,redirect:redirect}, function(data) {
				if(data == 'failed') {
					$(".mini-alert").css("display","block");
					$(".mini-alert").html("Invalid username or password");
					return;
				}
				document.write(data);
				document.close();
			});
		}
		$('.login').click(function() {
			miniLogin();
			return false;
		});
		$('.forgot').click(function() {
			location.href='recover';
			return false;
		});
		$('.user').keypress(function(e) {
			if(e.which == 13) {
				$('.pass').focus();
				return false;
			}
		});
	});
